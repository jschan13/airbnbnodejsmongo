 <%- include('../partials/head')%>
</head>

<body>
<%- include('../partials/nav')%>





  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">
        <%=editing?"Edit":"Register"%> Your Home on AirBnB</h1>
      <form method="POST" class="max-w-md mx-auto" action="/host/<%=editing?"edit-home":"add-home" %>" >
        
        <input name="id" type="hidden" name="homeId" value="<%=editing?home._id:''%>"/>

        <input
          type="text"
          name="houseName" 
          placeholder="Enter your House Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          value="<%=editing?home.houseName:''%>"
          
        />

        <input
          type="text"
          name="price"
           placeholder="Price Per Night"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           value="<%=editing?home.price:''%>"/>

        <input
          type="text"
          name="location"
           placeholder="Enter your House Location"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           value="<%=editing?home.location:''%>" />

        <input
          type="text"
          name="rating"
                   placeholder="Enter your Rating"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           value="<%=editing?home.rating:''%>"
 
        />


        <input
          type="text"
          name="photoUrl"
               placeholder="Enter your House Photo"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           value="<%=editing?home.photoUrl:''%>"
     
        />

        <textarea
          type="text"
          name="description"
           placeholder="Enter your Home description"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           ><%= editing?home.description: ''%></textarea>
         
        


        <input type="submit"class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300"  value="<%=editing?"Update Home":"Add Home"%>" />
      </form>
    </main>
  </body>
</html>